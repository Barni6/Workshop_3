<Window x:Class="Workshop_3.TrooperEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Workshop_3"
        mc:Ignorable="d"
        Title="TrooperEditor" Height="450" Width="800">
    <Grid>
        <StackPanel  x:Name="tp_lb"  Margin="0,0,0,75">
            <Label Content="Power" Background="LightBlue" Padding="10" />
            <TextBox x:Name="power"  Padding="20" Text="{Binding Power}"/>
            <Label Content="Vitality" Background="LightBlue" Padding="10" Height="50" />
            <TextBox x:Name="Vitality" Padding="10" Text="{Binding Vitality}"/>
            <Label Content="Cost" Background="LightBlue" Padding="10" />
            <TextBox x:Name="Cost" Padding="20" Text="{Binding Cost}"/>
            <Button Content="Save!" Padding="10" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
